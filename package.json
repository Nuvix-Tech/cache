{
  "name": "@nuvix/cache",
  "version": "1.0.4",
  "description": "A high-performance, flexible caching library with Redis support, compression, and telemetry integration",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup -w",
    "build:tsc": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run clean && npm run build",
    "docs": "typedoc --out docs src",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nuvix-tech/cache.git"
  },
  "keywords": [
    "cache",
    "caching",
    "redis",
    "memcached",
    "memory",
    "performance",
    "compression",
    "telemetry",
    "typescript",
    "esm",
    "cjs",
    "nuvix",
    "adapter",
    "storage",
    "database",
    "key-value",
    "ttl",
    "high-performance"
  ],
  "author": "Nuvix",
  "license": "BSD-3-Clause",
  "dependencies": {
    "ioredis": "^5.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/memcached": "^2.2.10",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.6.2",
    "lint-staged": "^15.2.2",
    "memcached": "^2.2.2",
    "prettier": "^3.2.5",
    "redis": "^5.5.6",
    "ts-jest": "^29.1.0",
    "tsup": "^8.5.0",
    "typedoc": "^0.25.12",
    "typescript": "^5.2.0"
  },
  "peerDependencies": {
    "@nuvix/telemetry": "^1.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
